{
  "name": "confmgr",
  "version": "0.1.9",
  "description": "Env. Configuration Manager",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/chevdor/confmgr.git"
  },
  "bugs": {
    "url": "https://gitlab.com/chevdor/confmgr/issues/new?issue"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://gitlab.com/chevdor/confmgr",
  "scripts": {
    "clean": "rm -rf .nyc_output build coverage node_modules out dist lib build docs",
    "setup": "npm install -g ts-node",
    "lint": "echo 'skipped' || eslint --ext .js,.jsx,.ts,.tsx . && tsc --noEmit --pretty",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "test": "mocha",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test:watch": "mocha --watch",
    "test:check": "yarn lint && yarn test",
    "build": "tsc --build tsconfig.json",
    "build:doc": "typedoc --out docs src",
    "postinstall": "tsc",
    "prepare": "yarn build",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "yarn lint && yarn test",
    "preversion": "yarn lint"
  },
  "author": "chevdor",
  "license": "MIT",
  "keywords": [
    "config",
    "configuration",
    "manager",
    "env",
    "dotenv"
  ],
  "dependencies": {
    "@babel/runtime": "7.8.4",
    "chalk": "^3.0.0",
    "dotenv": "8.2.0",
    "ts-node": "8.6.2",
    "typescript": "3.8.2",
    "yaml": "^1.7.2"
  },
  "devDependencies": {
    "@types/dotenv": "8.2.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "chai": "4.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "mocha": "7.1.0",
    "prettier": "^1.19.1",
    "ts-node": "8.6.2",
    "typedoc": "0.16.10",
    "typescript": "3.8.2",
    "yarn": "1.22.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "build/"
    ],
    "env": [
      "mocha"
    ]
  },
  "engines": {
    "node": ">=10.13.0",
    "yarn": "^1.22.0"
  }
}
