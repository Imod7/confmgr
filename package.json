{
  "name": "confmgr",
  "version": "1.1.0",
  "description": "Env. Configuration Manager",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chevdor/confmgr.git"
  },
  "bugs": {
    "url": "https://github.com/chevdor/confmgr/issues/new?issue"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://github.com/chevdor/confmgr",
  "scripts": {
    "clean": "rm -rf .nyc_output build coverage node_modules out dist lib build docs .nyc_output",
    "setup": "npm install -g ts-node",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "test": "mocha -i --grep 'Benchmarks'",
    "test:all": "mocha",
    "test:watch": "mocha --watch -i --grep 'Benchmarks'",
    "test:check": "yarn lint && yarn test",
    "test:coverage1": "TS_NODE_FILES=true mocha â€” exit â€” require ts-node/register â€” colors test/**/*.ts",
    "test:coverage2": "nyc npm run test",
    "test2": "nyc mocha",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc --build tsconfig.json",
    "build:doc": "typedoc --out docs src",
    "prepare": "yarn build",
    "preversion": "yarn lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags -f",
    "prepublishOnly": "yarn lint && yarn test"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "author": "chevdor",
  "license": "MIT",
  "keywords": [
    "config",
    "configuration",
    "manager",
    "env",
    "dotenv"
  ],
  "dependencies": {
    "@babel/runtime": "7.25.0",
    "chalk": "~4",
    "dotenv": "16.4.5",
    "yaml": "2.5.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.17",
    "@types/mocha": "^10.0.7",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "chai": "4.3.7",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.4.0",
    "mocha": "10.7.3",
    "nyc": "15.1.0",
    "prettier": "2.8.3",
    "ts-node": "10.9.2",
    "typedoc": "0.26.5",
    "typescript": "4.9.5",
    "yarn": "1.22.22"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "build/",
      "node_modules"
    ],
    "env": [
      "mocha"
    ]
  },
  "engines": {
    "node": ">=18",
    "yarn": "^1.15"
  }
}
