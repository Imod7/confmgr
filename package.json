{
  "name": "confmgr",
  "version": "1.0.9",
  "description": "Env. Configuration Manager",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/chevdor/confmgr.git"
  },
  "bugs": {
    "url": "https://gitlab.com/chevdor/confmgr/issues/new?issue"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://gitlab.com/chevdor/confmgr",
  "scripts": {
    "clean": "rm -rf .nyc_output build coverage node_modules out dist lib build docs .nyc_output",
    "setup": "npm install -g ts-node",
    "lint": "eslint --ext .ts . && tsc --noEmit --pretty",
    "lint:fix": "eslint --ext .ts . --fix",
    "test": "mocha -i --grep 'Benchmarks'",
    "test:all": "mocha",
    "test:watch": "mocha --watch -i --grep 'Benchmarks'",
    "test:check": "yarn lint && yarn test",
    "test:coverage1": "TS_NODE_FILES=true mocha â€” exit â€” require ts-node/register â€” colors test/**/*.ts",
    "test:coverage2": "nyc npm run test",
    "test2": "nyc mocha",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc --build tsconfig.json",
    "build:doc": "typedoc --out docs src",
    "prepare": "yarn build",
    "preversion": "yarn lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags -f",
    "prepublishOnly": "yarn lint && yarn test"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "author": "chevdor",
  "license": "MIT",
  "keywords": [
    "config",
    "configuration",
    "manager",
    "env",
    "dotenv"
  ],
  "dependencies": {
    "@babel/runtime": "7.17.9",
    "chalk": "~4",
    "dotenv": "16.0.0",
    "typescript": "4.6.3",
    "yaml": "2.0.1"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/mocha": "9.1.1",
    "@types/node": "17.0.29",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "chai": "4.3.6",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "prettier": "2.6.2",
    "ts-node": "10.7.0",
    "typedoc": "0.22.15",
    "yarn": "1.22.18"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "build/"
    ],
    "env": [
      "mocha"
    ]
  },
  "engines": {
    "node": ">=16",
    "yarn": "^1.15"
  }
}
